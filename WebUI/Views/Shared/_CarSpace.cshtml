@model Reservation

@{
    var user = ViewData["user"] as User;
}

<input type="image" src="car@(Model.Space % 3 == 0 ? 1 : 2).png" alt="car" class="btTxt submit mx-auto d-block car-img" data-toggle="modal" data-target="#id_@Model.Space"/>

<div class="modal fade" id="id_@Model.Space" tabindex="-1" role="dialog" aria-labelledby="id_@Model.Space" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Място @(Model.Space)</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container color-bg rounded">
                    <div class="row">
                        <div class="col p-3">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <h3 class="text-center color-text p-3">@Model.User.Username (@Model.User.FirstName, @Model.User.LastName)</h3>
                                <hr/>
                                <h5 class="text-center color-text p-1">От: @Model.From.ToString("dddd HH:mm (dd MMMM yyyy)", new CultureInfo("bg"))</h5>
                                <h5 class="text-center color-text p-1">До: @Model.To.ToString("dddd HH:mm (dd MMMM yyyy)", new CultureInfo("bg"))</h5>
                            }
                            else
                            {
                                <p class="h5 text-center color-text p-5">Трябва да си влязъл в профила си за да преглеждаш вече заетите места!</p>
                                <a asp-controller="Auth" asp-action="Login" class="btn btn-lg btn-block btn-primary">Влизане в профила</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @if (user?.Id == Model.By)
                {
                    <form asp-controller="Home" asp-action="RemoveReservation">
                        <div hidden="hidden">
                          @Html.EditorForModel()
                        </div>
                        <button type="submit" class="btn btn-danger">Освобождаване</button>
                    </form>
                }
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Затвори</button>
            </div>
        </div>
    </div>
</div>